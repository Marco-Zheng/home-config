#alias
amino-deploy-f2e-prd () {~/.bin/amino-prd-deploy $1 "cd /project/app-src/git/amino-f2e && sudo git pull && sudo ./deploy-prd.sh && exit"}
amino-deploy-api-flume-prd () {~/.bin/amino-prd-deploy $1 "cd /project/app-src/git/flume-config && sudo git pull && sudo /etc/init.d/FlumeService restart && exit"}
amino-deploy-ws-prd () {~/.bin/amino-prd-deploy $1 "cd /project/src/amino-ws && sudo git pull --no-edit && ./deploy.sh && exit"}
amino-deploy-web-prd () {~/.bin/amino-prd-deploy $1 "cd /project/app-src/git/amino-server && sudo git pull &&  sudo python deploy_server.py -c production_ec2 -d /project/www-scripts -k key_store_production && sudo service uwsgi restart && exit"}
amino-deploy-job-prd () {~/.bin/amino-prd-deploy $1 "cd /project/app-src/git/amino-server && sudo git pull &&  sudo python deploy_server.py -c production_ec2 -d /project/www-scripts -k key_store_production && exit"}
amino-deploy-nsfw-prd () {~/.bin/amino-prd-deploy $1 "cd /project/app-src/git/amino-server && sudo git pull &&  sudo python deploy_server.py -c production_ec2 -d /project/www-scripts -k key_store_production && sudo service NDNsfwDetection restart && exit"}
amino-deploy-push-server-prd () {~/.bin/amino-prd-deploy $1 "cd /project/app-src/git/amino-server && sudo git pull &&  sudo python deploy_server.py -c production_ec2 -d /project/www-scripts -k key_store_production && sudo service NDPushServer restart && sudo service NDPushDispatcher restart && exit"}
amino-deploy-push-prd () {~/.bin/amino-prd-deploy $1 "cd /project/app-src/git/amino-server && sudo git pull &&  sudo python deploy_server.py -c production_ec2 -d /project/www-scripts -k key_store_production && sudo /etc/init.d/NDPush restart && exit"}
amino-deploy-all-prd () {~/.bin/amino-prd-deploy $1 "cd /project/app-src/git/amino-server && sudo git pull &&  sudo python deploy_server.py -c production_ec2 -d /project/www-scripts -k key_store_production && sudo service uwsgi restart && sudo /etc/init.d/NDPush restart && sudo service NDNsfwDetection restart && exit"}
amino-deploy-server-dev() {~/.bin/amino-dev-deploy 10.0.10.253 "~/deploy-web.sh && exit"}
amino-deploy-ws1-dev() {~/.bin/amino-dev-deploy 10.0.1.246 "cd /project/src/amino-ws && sudo git pull --no-edit && ./deploy-dev.sh && exit"}
amino-deploy-ws2-dev() {~/.bin/amino-dev-deploy 10.0.1.136 "cd /project/src/amino-ws && sudo git pull --no-edit && ./deploy-dev.sh && exit"}
amino-deploy-f2e-dev() {~/.bin/amino-dev-deploy 10.0.10.253 "~/deploy-f2e.sh && exit"}
amino-deploy-toolbox-dev() {~/.bin/amino-dev-deploy 10.0.10.64 "cd /home/ubuntu/amino-toolbox-config && ./deploy.sh && exit"}

#shortcut
pip_update_all () {pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs pip install -U }

#proxy
ppp () { export http_proxy="http://127.0.0.1:8899"; export https_proxy="http://127.0.0.1:8899"; echo "PlutoX Proxy on" }
sss () { export https_proxy="http://127.0.0.1:9090";export http_proxy="http://127.0.0.1:9090"; echo "SpechLite Proxy on" }
noproxy () { unset http_proxy; unset https_proxy; unset all_proxy; echo "Proxy off" }
