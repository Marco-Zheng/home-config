[user]
	name = Marco
	email = cq_zheng@trip.com
[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
[core]
	quotepath = false
	mergeoptions = --no-edit
	editor = /usr/bin/vim
	trustctime = false
	excludesfile = ~/.gitignore_global
	autocrlf = input
[push]
	default = simple
[pull]
	rebase = true
[mergetool]
	keepBackup = false
[include]
	path = ~/.gitconfig_local
[includeIf "gitdir:**/Projects/trip/"]
	path = .gitconfig_trip
[url "git@git.dev.sh.ctripcorp.com:ctripgo"]
	insteadOf = https://github.com/ctripcorp
[url "git@git.dev.sh.ctripcorp.com:servicemesh"]
	insteadOf = http://git.dev.sh.ctripcorp.com/servicemesh
[alias]
	yolo = !git commit -m \"$(curl -s whatthecommit.com/index.txt)\"
