#!/usr/bin/expect
set timeout 30
set ip [lindex $argv 0]
set username [lindex $argv 1]
set port [lindex $argv 2]
set password [lindex $argv 3]

spawn ssh -p $port $username@$ip
expect  {
	"*?assword:*" {
		send "$password\r"
		interact
	}
	"*(yes/no)*" {
		sleep 1
		send "yes\r"
		exp_continue
	}
}
